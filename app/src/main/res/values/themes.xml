<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalendarApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#A1AAFF</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9CBDFF</item>
        <item name="colorSecondaryVariant">#5526FD</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyPopupMenu" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_round</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">#94A6FF</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">#8B9AFF</item>
        <item name="colorControlHighlight">#88A2FF</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">#5F62FF</item>
    </style>

</resources>